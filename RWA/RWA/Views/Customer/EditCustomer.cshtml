@model RWA.Models.ViewModel.EditCustomerVM

@{
    ViewBag.Title = "EditCustomer";
    SelectList ddlGradovi = new SelectList(
 items: Model.Towns,
 dataTextField: "Naziv",
 dataValueField: "IDGrad");
}

<h2>Uredi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.Customer.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Customer.Ime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Customer.Ime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Customer.Prezime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Customer.Prezime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Customer.Prezime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Customer.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Customer.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Customer.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Customer.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Customer.Telefon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Customer.Telefon, "", new { @class = "text-danger" })
        </div>
    </div>
    @using (Html.BeginForm(controllerName: "Home", actionName: "ShowKupci", htmlAttributes: new { id = "formGrad" }, routeValues: null, method: FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label(expression: "IDGrad", labelText: "Grad")

            @Html.DropDownList(
                 optionLabel: "--- odaberi ---",
                 selectList: ddlGradovi,
                 name: "IDGrad",
                 htmlAttributes: new { @class = "form-control" })
        </div>
    }

    <div class="form-group">

    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spremi promjene" class="btn btn-default" onclick=Repository.EditCustomer() />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Natrag na listu kupaca", "Index")
</div>
